<div class="jumbotron center">

<h2>Here are your mems, yo</h2>

<table>
  <thead>
    <tr>
      <th>Question</th>
      <th>User</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mems.each do |mem| %>
      <tr>
        <td><%= mem.question %></td>
        <td><%= mem.user.email if mem.user %></td>
        <td><%= link_to 'Answer', mem %></td>
        <% if mem.user == current_user %>
        <td><%= link_to 'Edit', edit_mem_path(mem) %></td>
        <td><%= link_to 'Delete', mem, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end -%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'New Mem', new_mem_path %>
<% end %>